{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://veribiota.dev/schemas/variant/vcf_normalization_v1.json",
  "title": "VeriBiota VCF normalization v1",
  "type": "object",
  "required": ["input_vcf_hash", "normalized_vcf_hash", "variants"],
  "properties": {
    "input_vcf_hash": { "type": "string", "pattern": "^[a-z0-9]+:[0-9a-f]{64}$" },
    "normalized_vcf_hash": { "type": "string", "pattern": "^[a-z0-9]+:[0-9a-f]{64}$" },
    "reference_fasta_hash": { "type": "string", "pattern": "^[a-z0-9]+:[0-9a-f]{64}$" },
    "summary": {
      "type": "object",
      "properties": {
        "number_trimmed": { "type": "integer", "minimum": 0 },
        "number_split": { "type": "integer", "minimum": 0 },
        "number_invalid": { "type": "integer", "minimum": 0 }
      }
    },
    "variants": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["locus", "original", "normalized"],
        "properties": {
          "locus": {
            "type": "object",
            "required": ["chrom", "pos"],
            "properties": {
              "chrom": { "type": "string" },
              "pos": { "type": "integer", "minimum": 1 }
            }
          },
          "original": {
            "type": "object",
            "required": ["ref", "alt"],
            "properties": {
              "ref": { "type": "string" },
              "alt": {
                "type": "array",
                "minItems": 1,
                "items": { "type": "string" }
              }
            }
          },
          "normalized": {
            "type": "object",
            "required": ["pos", "ref", "alt"],
            "properties": {
              "pos": { "type": "integer", "minimum": 1 },
              "ref": { "type": "string" },
              "alt": {
                "type": "array",
                "minItems": 1,
                "items": { "type": "string" }
              }
            }
          },
          "operations": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": ["left_trim", "right_trim", "left_align", "split", "merge", "pad_left", "pad_right"]
            }
          },
          "notes": { "type": "string" }
        }
      }
    }
  }
}
