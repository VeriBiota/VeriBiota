{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "VeriBiota Checks Bundle v1",
  "type": "object",
  "required": [
    "schema",
    "toolchain",
    "modelHash",
    "generatedAt",
    "checks"
  ],
  "properties": {
    "schema": { "const": "veribiota.checks.v1" },
    "toolchain": {
      "type": "object",
      "required": ["lean", "mathlib"],
      "properties": {
        "lean": { "type": "string" },
        "mathlib": { "type": "string" },
        "tactics": { "type": "string" }
      },
      "additionalProperties": false
    },
    "modelHash": { "$ref": "#/definitions/sha256Tag" },
    "generatedAt": { "type": "string", "format": "date-time" },
    "checks": {
      "type": "array",
      "minItems": 1,
      "items": {
        "oneOf": [
          { "$ref": "#/definitions/positivityCounts" },
          { "$ref": "#/definitions/positivityConc" },
          { "$ref": "#/definitions/linearInvariant" }
        ]
      }
    },
    "signature": { "$ref": "#/definitions/signature" }
  },
  "additionalProperties": false,
  "definitions": {
    "sha256Tag": {
      "type": "string",
      "pattern": "^sha256:[0-9a-fA-F]{64}$"
    },
    "canonicalization": {
      "type": "object",
      "required": ["scheme"],
      "properties": {
        "scheme": { "const": "veribiota-canon-v1" },
        "newlineTerminated": { "type": "boolean" }
      },
      "additionalProperties": false
    },
    "signature": {
      "type": "object",
      "required": [
        "alg",
        "kid",
        "issuedAt",
        "payloadHash",
        "canonicalization",
        "jws"
      ],
      "properties": {
        "alg": { "const": "Ed25519" },
        "kid": { "type": "string" },
        "issuedAt": { "type": "string", "format": "date-time" },
        "payloadHash": { "$ref": "#/definitions/sha256Tag" },
        "canonicalization": { "$ref": "#/definitions/canonicalization" },
        "jws": { "type": "string" }
      },
      "additionalProperties": false
    },
    "speciesArray": {
      "type": "array",
      "minItems": 1,
      "items": { "type": "string" }
    },
    "tolerance": {
      "type": "object",
      "required": ["mode", "value"],
      "properties": {
        "mode": { "type": "string", "enum": ["absolute", "relative"] },
        "value": { "type": "number" }
      },
      "additionalProperties": false
    },
    "weights": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": { "type": "integer" }
    },
    "positivityCounts": {
      "type": "object",
      "required": ["type", "species"],
      "properties": {
        "type": { "const": "positivity_counts" },
        "species": { "$ref": "#/definitions/speciesArray" }
      },
      "additionalProperties": false
    },
    "positivityConc": {
      "type": "object",
      "required": ["type", "species", "tolerance"],
      "properties": {
        "type": { "const": "positivity_conc" },
        "species": { "$ref": "#/definitions/speciesArray" },
        "tolerance": { "type": "number" }
      },
      "additionalProperties": false
    },
    "linearInvariant": {
      "type": "object",
      "required": ["type", "name", "proofId", "weights", "tolerance"],
      "properties": {
        "type": { "const": "lin_invariant" },
        "name": { "type": "string" },
        "proofId": { "type": "string" },
        "weights": { "$ref": "#/definitions/weights" },
        "tolerance": { "$ref": "#/definitions/tolerance" },
        "strict": { "type": "boolean" }
      },
      "additionalProperties": false
    }
  }
}
