{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "VeriBiota Certificate v1",
  "type": "object",
  "required": [
    "schema",
    "modelHash",
    "semantics",
    "toolchain",
    "theorems",
    "timestamp"
  ],
  "properties": {
    "schema": { "const": "veribiota.certificate.v1" },
    "modelId": { "type": "string" },
    "modelHash": { "$ref": "#/definitions/sha256Tag" },
    "semantics": {
      "type": "array",
      "minItems": 1,
      "items": { "type": "string" }
    },
    "toolchain": { "$ref": "#/definitions/toolchain" },
    "theorems": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/definitions/theorem" }
    },
    "timestamp": { "type": "string", "format": "date-time" },
    "parameters": { "type": ["object", "array", "null"] },
    "limits": { "$ref": "#/definitions/limits" },
    "signature": { "$ref": "#/definitions/signature" }
  },
  "additionalProperties": false,
  "definitions": {
    "sha256Tag": {
      "type": "string",
      "pattern": "^sha256:[0-9a-fA-F]{64}$"
    },
    "toolchain": {
      "type": "object",
      "required": ["lean", "mathlib"],
      "properties": {
        "lean": { "type": "string" },
        "mathlib": { "type": "string" },
        "tacticLib": { "type": "string" }
      },
      "additionalProperties": false
    },
    "theorem": {
      "type": "object",
      "required": ["name", "statement", "proofId"],
      "properties": {
        "name": { "type": "string" },
        "statement": { "type": "string" },
        "proofId": { "type": "string" }
      },
      "additionalProperties": false
    },
    "limits": {
      "type": "object",
      "required": ["domain"],
      "properties": {
        "domain": { "type": "string" },
        "assumptions": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "additionalProperties": false
    },
    "canonicalization": {
      "type": "object",
      "required": ["scheme"],
      "properties": {
        "scheme": { "const": "veribiota-canon-v1" },
        "newlineTerminated": { "type": "boolean" }
      },
      "additionalProperties": false
    },
    "signature": {
      "type": "object",
      "required": [
        "alg",
        "kid",
        "issuedAt",
        "payloadHash",
        "canonicalization",
        "jws"
      ],
      "properties": {
        "alg": { "const": "Ed25519" },
        "kid": { "type": "string" },
        "issuedAt": { "type": "string", "format": "date-time" },
        "payloadHash": { "$ref": "#/definitions/sha256Tag" },
        "canonicalization": { "$ref": "#/definitions/canonicalization" },
        "jws": { "type": "string" }
      },
      "additionalProperties": false
    }
  }
}
